<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
            <div class="nav__burger" id="burger">
          <div class="burger__line" id="burger_first"></div>
          <div class="burger__line" id="burger_last"></div>
        </div>
    <div class="sidebar__main"  id="nav">
      <div class="sidebar__guild__info">
        <% if(guild.icon) { %> <img
        src="https://cdn.discordapp.com/icons/<%=guild.id%>/<%=
        guild.icon.replace("a_", "") %>.png?size=4096" alt="<%=guild.name%>'s
        icon" /> <%} else {%>
        <img
          src="https://cdn.discordapp.com/attachments/957399182115745802/960588244003729469/Solid-Red.png"
          alt="<%=guild.name%>'s icon"
        />
        <%}%>
        <h1 class="sidebar__guild__name"><%= guild.name %></h1>
      </div>
      <div class="list">
      <ul class="sidebar__categorys">
        <li>
          <a href="/dashboard/<%= guild.id %>" class="active"><i class="fa-solid fa-gear"></i></i><span>Settings</span></a>
        </li>
        <li>
          <a href="/comingsoon" class="active"><i class="fa-solid fa-ticket"></i><span>Tickets</span></a>
        </li>
        <li>
          <a href="/comingsoon" class="active"><i class="fa-solid fa-book"></i></i><span>Logging</span></a>
        </li>
      </ul>
      </div>
    </div>
  </body>
    <script>
    const burger = document.getElementById("burger");
    const burgerLineFirst = document.getElementById("burger_first");
    const burgerLineLast = document.getElementById("burger_last");
    const navMenu = document.getElementById("nav");
    burger.addEventListener("click", (e) => {
      e.preventDefault();
      navMenu.classList.toggle("sidebar__active");
      burgerLineFirst.classList.toggle(`burger__line__top`)
      burgerLineLast.classList.toggle(`burger__line__bottom`)
    });
  </script>
</html>
